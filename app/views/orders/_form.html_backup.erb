<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <!-- <%= #f.select :status <% end %>
            # options_for_select([['Nowe', 'new'], ['Potwierdzone', 'confirmed'], ['Zrealizowane', 'done']) %>
            # collection_select :status, ['Nowe', 'Potwierdzone'], :id, {class: 'form-control'} -->
            <%= f.collection_select :status, ['a', 'b'],{prompt: "Select a category"}, {class: "form-control"} %>
            <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comment, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>
