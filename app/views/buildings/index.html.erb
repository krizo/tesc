<%- model_class = Building -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Budowy".titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nr) %></th>
      <th><%= model_class.human_attribute_name(:nazwa) %></th>
      <th><%= model_class.human_attribute_name(:investor) %></th>
      <th><%= model_class.human_attribute_name(:adres) %></th>
      <th><%= model_class.human_attribute_name(:miasto) %></th>
      <th><%= model_class.human_attribute_name("kod pocztowy") %></th>
      <th><%=t '.actions', :default => t("helpers.akcje") %></th>
    </tr>
  </thead>
  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.id, building_path(building) %></td>
        <td><%= building.name %></td>
        <td><%= building.investor %></td>
        <td><%= building.address %></td>
        <td><%= building.city %></td>
        <td><%= building.zip %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edycja")),
                      edit_building_path(building), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.usuÅ„")),
                      building_path(building),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_building_path,
            :class => 'btn btn-primary' %>
