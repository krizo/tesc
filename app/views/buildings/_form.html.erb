<%= simple_form_for @building, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :investor %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :zip %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                buildings_path, :class => 'btn' %>
  </div>
<% end %>
